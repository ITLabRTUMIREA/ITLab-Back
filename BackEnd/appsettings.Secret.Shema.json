{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "JSON Schema for my JSON file format",

  "type": "object",
  "properties": {
    "ConnectionStrings": {
      "type": "object",
      "description": "Connection Strings for application",
      "properties": {
        "RemoteDB": {
          "type": "string",
          "description": "Connection String to Remote Database (Azure SQL, for example)"
        }
      },
      "required": [ "RemoteDB" ]
    },
    "JwtIssuerOptions": {
      "type": "object",
      "properties": {
        "SecretKey": {
          "type": "string",
          "minLength": 35,
          "description": "secret key for generating JWT token"
        }
      },
      "required": [ "SecretKey" ]
    },
    "RegisterTokenPair": {
      "type": "array",
      "description": "Define Hard registered token pairs for first users",
      "items": {
        "type": "object",
        "properties": {
          "Email": { "type": "string" },
          "Token": { "type": "string" }
        }
      }
    },
    "DBInitialize": {
      "type": "object",
      "properties": {
        "WantedRoles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "Email": { "type": "string" },
              "RoleName": {
                "type": "string",
                "enum": [ "CanEditEquipment", "CanEditRoles" ]
              }
            }
          }
        }
      }
    }
  },
  "required": [ "ConnectionStrings", "JwtIssuerOptions" ]
}
