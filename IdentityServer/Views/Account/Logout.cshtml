@model LogoutViewModel

<div class="logout-page">
    <div class="page-header">
        <h1>Выход из системы</h1>
    </div>

    <div class="row">
        <div class="col-sm-6">
            <p>Вы действительно хотите выйти из системы?</p>
            <form asp-action="Logout">
                <input type="hidden" name="logoutId" value="@Model.LogoutId"  />
                <fieldset>
                    <div class="form-group">
                        <button class="btn btn-primary">Да</button>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>