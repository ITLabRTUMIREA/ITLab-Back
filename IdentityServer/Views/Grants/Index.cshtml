@model GrantsViewModel

<div class="grants">
    <div class="row page-header">
        <div class="col-sm-10">
            <h1>
                Доступ приложений
            </h1>
            <div>
                Ниже приведен список приложений, к которым у вас есть доступ, и названия ресурсов, к которым у них есть доступ.
            </div>
        </div>
    </div>

    @if (!Model.Grants.Any())
    {
        <div class="row">
            <div class="col-sm-8">
                <div class="alert alert-info">
                    У вас нет доступа ни к одному приложению
                </div>
            </div>
        </div>
    }
    else
    {
        foreach (var grant in Model.Grants)
        {
            <div class="row grant">
                <div class="col-sm-2">
                    @if (!string.IsNullOrEmpty(grant.ClientLogoUrl))
                    {
                        <img src="@grant.ClientLogoUrl">
                    }
                </div>
                <div class="col-sm-8">
                    <div class="clientname">@grant.ClientName</div>
                    <div>
                        <span class="created">Выдан доступ:</span> @grant.Created.ToString("yyyy-MM-dd")
                    </div>
                    @if (grant.Expires.HasValue)
                    {
                        <div>
                            <span class="expires">Доступ оканчивается:</span> @grant.Expires.Value.ToString("yyyy-MM-dd")
                        </div>
                    }
                    @if (grant.IdentityGrantNames.Any())
                    {
                        <div>
                            <div class="granttype">Доступ к личным данным</div>
                            <ul>
                                @foreach (var name in grant.IdentityGrantNames)
                        {
                                    <li>@name</li>
                                }
                            </ul>
                        </div>
                    }
                    @if (grant.ApiGrantNames.Any())
                    {
                        <div>
                            <div class="granttype">Доступ к API</div>
                            <ul>
                                @foreach (var name in grant.ApiGrantNames)
                                {
                                    <li>@name</li>
                                }
                            </ul>
                        </div>
                    }
                </div>
                <div class="col-sm-2">
                    <form asp-action="Revoke">
                        <input type="hidden" name="clientId" value="@grant.ClientId">
                        <button class="btn btn-danger">Запретить доступ</button>
                    </form>
                </div>
            </div>
        }
    }
</div>